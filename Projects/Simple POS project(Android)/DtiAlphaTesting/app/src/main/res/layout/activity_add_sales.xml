<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dtibackground"
    tools:context=".AddSalesActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/salesConstraintLayout"
        android:layout_width="388dp"
        android:layout_height="771dp"
        android:layout_marginStart="-22dp"
        android:layout_marginLeft="-22dp"

        android:layout_marginBottom="56dp"
        android:background="@drawable/dashboardmenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amountSalestxt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginBottom="176dp"
            android:background="@drawable/addsales_box"
            android:hint="Amount"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="344dp"
            android:layout_height="388dp"
            android:layout_marginStart="-22dp"

            android:layout_marginLeft="-22dp"
            android:layout_marginBottom="236dp"
            android:background="@drawable/addsales_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0">.

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/totalSalestxt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:background="@drawable/addsales_box"
            android:hint="Total"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="44dp"
            android:background="@drawable/addsales_box"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.209">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/customerSalesSpinner"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateSalestxt"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="44dp"
            android:background="@drawable/addsales_box"
            android:hint="Amount"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.209" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/changeSalesTxt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="@drawable/addsales_box"
            android:hint="Change"
            android:text=""
            android:textSize="15dp"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/totalSalestxt" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/salesCancelbtn"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/addsales_button"
            android:text="Cancel"
            android:textColor="#AEAEAE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/salesSavebtn"
            android:layout_width="120dp"
            android:layout_height="47dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/addsales_button"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>